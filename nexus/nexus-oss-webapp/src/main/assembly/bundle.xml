<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>bundle</id>

  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
  
  <includeBaseDirectory>false</includeBaseDirectory>
  
  <fileSets>
    <fileSet>
      <directory>src/main/resource/content</directory>
      <excludes>
        <exclude>**/.placeholder</exclude>
        <exclude>**/nexus</exclude>
        <exclude>**/*.bat</exclude>
        <exclude>**/wrapper-*</exclude>
      </excludes>
      <outputDirectory>${project.build.finalName}</outputDirectory>
    </fileSet>
    
    <fileSet>
      <directory>src/main/resource/content</directory>
      <includes>
        <include>**/nexus</include>
        <include>**/*.bat</include>
        <include>**/wrapper-*</include>
      </includes>
      <outputDirectory>${project.build.finalName}</outputDirectory>
      <fileMode>0755</fileMode>
    </fileSet>
    
    <fileSet>
      <directory>src/main/resource/sonatype-work</directory>
      <excludes>
        <exclude>**/.placeholder</exclude>
      </excludes>
      <outputDirectory>sonatype-work</outputDirectory>
    </fileSet>
  </fileSets>
  
  <dependencySets>
    <dependencySet>
      <includes>
        <include>*:nexus-webapp:war</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>WEB-INF/classes/**</exclude>
          <exclude>WEB-INF/lib/**</exclude>
          <exclude>WEB-INF/logback.xml</exclude>
          <exclude>WEB-INF/runtime/**</exclude>
          <exclude>WEB-INF/plexus.properties</exclude>
          <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputDirectory>${project.build.finalName}/runtime/apps/nexus/webapp</outputDirectory>
    </dependencySet>
    
    <dependencySet>
      <includes>
        <include>*:nexus-webapp:zip</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <unpack>true</unpack>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputDirectory>${project.build.finalName}/runtime/apps/nexus/lib</outputDirectory>
    </dependencySet>
    
    <dependencySet>
      <includes>
        <include>*:nexus-archetype-plugin</include>
        <include>*:nexus-core-documentation-plugin</include>
        <include>*:nexus-indexer-lucene-plugin</include>
        <include>*:nexus-ldap-realm-plugin</include>
        <include>*:nexus-plugin-console-plugin</include>
        <include>*:nexus-rrb-plugin</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <unpack>true</unpack>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputDirectory>${project.build.finalName}/runtime/apps/nexus/plugin-repository</outputDirectory>
    </dependencySet>

    <dependencySet>
      <includes>
        <include>*:nexus-capabilities-plugin</include>
        <include>*:nexus-groovy-console-plugin</include>
        <include>*:nexus-maven-bridge-plugin</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <unpack>true</unpack>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputDirectory>${project.build.finalName}/runtime/apps/nexus/optional-plugins</outputDirectory>
    </dependencySet>
  </dependencySets>

</assembly>
