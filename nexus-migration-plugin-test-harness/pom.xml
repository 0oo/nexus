<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <name>Nexus Migration plugin for Artifactory - Test harness</name>

  <parent>
    <groupId>org.sonatype.nexus</groupId>
    <artifactId>nexus-test-harness-parent</artifactId>
    <version>1.3.0-SNAPSHOT</version>
  </parent>
  <artifactId>nexus-migration-plugin-test-harness</artifactId>

  <properties>
    <migration-plugin-version>1.0-SNAPSHOT</migration-plugin-version>
    <nexus.version>1.3.0-SNAPSHOT</nexus.version>
  </properties>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>artifactory-bridge</id>
            <phase>generate-test-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeArtifactIds>nexus-migration-artifactory-bridge</includeArtifactIds>
              <includeTypes>zip</includeTypes>
              <outputDirectory>${nexus-abs-basedir}</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>unpack-maven-repo</id>
            <phase>generate-test-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeArtifactIds>nexus-test-harness-launcher</includeArtifactIds>
              <includeTypes>zip</includeTypes>
              <outputDirectory>${project.build.testOutputDirectory}/fake-central</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>get-sources-for-emma</id>
            <phase>pre-site</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <classifier>sources</classifier>
              <includeGroupIds>org.sonatype.nexus.plugins</includeGroupIds>
              <outputDirectory>${emma-sources-base}</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <configuration>
          <filesets>
            <fileset>
              <directory>${basedir}</directory>
              <includes>
                <include>/coverage.ec</include>
              </includes>
              <followSymlinks>false</followSymlinks>
            </fileset>
          </filesets>
        </configuration>
      </plugin>

    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-migration-plugin-artifactory</artifactId>
      <version>${migration-plugin-version}</version>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-migration-artifactory-bridge</artifactId>
      <version>${migration-plugin-version}</version>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-migration-artifactory-bridge</artifactId>
      <version>${migration-plugin-version}</version>
      <type>zip</type>
      <classifier>webapp</classifier>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-test-harness-launcher</artifactId>
      <version>${nexus.version}</version>
      <type>zip</type>
      <classifier>repo</classifier>
    </dependency>
  </dependencies>


  <reporting>
    <plugins>
      <plugin>
        <groupId>org.sonatype.maven.plugin</groupId>
        <artifactId>emma4it-maven-plugin</artifactId>
        <version>1.0</version>
        <configuration>
          <searchPath>${basedir}</searchPath>
          <sourceFolders>
            <sourceFolder>${emma-sources-base}</sourceFolder>
          </sourceFolders>
          <jarFiles>
            <jarFile>${nexus-abs-basedir}/runtime/apps/nexus/lib/nexus-migration-artifactory-bridge-${migration-plugin-version}.jar</jarFile>
            <jarFile>${nexus-abs-basedir}/runtime/apps/nexus/lib/nexus-migration-plugin-artifactory-${migration-plugin-version}.jar</jarFile>
            <jarFile>${nexus-abs-basedir}/runtime/apps/nexus/lib/nexus-migration-plugin-configuration-${migration-plugin-version}.jar</jarFile>
          </jarFiles>
        </configuration>
      </plugin>
    </plugins>
  </reporting>

</project>